{
  "name": "gpcbtinewweb-monorepo",
  "private": true,
  "version": "1.0.0",

  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm --filter client build",
    "start": "pnpm --filter server start",

    "prisma:generate": "pnpm --filter server prisma generate",
    "prisma:migrate": "pnpm --filter server prisma migrate dev",
    "prisma:deploy": "pnpm --filter server prisma migrate deploy",
    "prisma:studio": "pnpm --filter server prisma studio"
  },

  "devDependencies": {
    "nodemon": "^3.1.0"
  }
}
